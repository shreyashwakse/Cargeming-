<div class="game-wrapper">
    <div class="dashboard">
        <div class="score-display">SCORE: <span id="score">0</span></div>
        <div class="speed-display">SPEED: <span id="speed">1.0</span>X</div>
    </div>

    <div class="road" id="road">
        <!-- The player car element must exist in the HTML for the class to find it -->
        <div id="player-car" class="car player-car">
            <div class="car-light"></div>
            <div class="car-windshield"></div>
            <div class="car-light"></div>
        </div>

        <div id="game-over-screen">
            <h2>CRASH!</h2>
            <p>Final Score: <span id="final-score">0</span></p>
            <button id="restart-btn">RESTART RACE</button>
        </div>
    </div>

    <!-- Mobile Touch Controls -->
    <div class="controls">
        <button class="control-btn" id="left-btn">LEFT</button>
        <button class="control-btn" id="right-btn">RIGHT</button>
        <button class="control-btn" id="accel-btn">ACCEL</button>
        <button class="control-btn" id="brake-btn">BRAKE</button>
    </div>
</div>

<script>
    // --- Configuration Constants ---
    const CONFIG = {
        PLAYER_SPEED_HORIZONTAL: 4,
        INITIAL_GAME_SPEED: 1,
        MAX_GAME_SPEED: 4.5,
        ACCELERATION_RATE: 0.02,
        ENEMY_SPEED_MULTIPLIER: 2,
        ENEMY_SPAWN_INTERVAL: 180,
        SCORE_INCREMENT_RATE: 0.1,
        CAR_WIDTH: 50,
        CAR_HEIGHT: 80
    };

    // --- Utility Function for Collision Detection ---
    function checkCollision(rect1, rect2) {
        return (
            rect1.x < rect2.x + rect2.width &&
            rect1.x + rect1.width > rect2.x &&
            rect1.y < rect2.y + rect2.height &&
            rect1.y + rect1.height > rect2.y
        );
    }

    // --- Class for Road Elements (Lines) ---
    class RoadLine {
        constructor(y, roadElement) {
            this.height = 80;
            this.interval = 120;
            this.y = y;

            this.element = document.createElement('div');
            this.element.className = 'road-line';
            this.element.style.height = `${this.height}px`;
            this.element.style.top = `${this.y}px`;
            roadElement.appendChild(this.element);
        }

        update(movement) {
            this.y += movement;
            this.element.style.top = `${this.y}px`;
        }

        remove() {
            this.element.remove();
        }
    }

    // --- Class for Game Vehicles (Player and Enemies) ---
    class Vehicle {
        constructor(isPlayer, initialX, initialY, roadElement) {
            this.isPlayer = isPlayer;
            this.width = CONFIG.CAR_WIDTH;
            this.height = CONFIG.CAR_HEIGHT;
            this.x = initialX;
            this.y = initialY;
            this.roadElement = roadElement;

            // Get existing player element or create a new enemy element
            this.element = isPlayer ? document.getElementById('player-car') : this.createEnemyElement();
            if (!this.element) {
                console.error("Vehicle initialization failed: Car element not found.");
                return;
            }

            this.element.style.left = `${this.x}px`;
            this.element.style.top = `${this.y}px`;
        }

        createEnemyElement() {
            const enemy = document.createElement('div');
            enemy.className = 'car enemy-car';
            enemy.innerHTML = `
                <div class="car-light" style="background-color: white;"></div>
                <div class="car-windshield" style="background-color: rgba(0,0,0,0.8);"></div>
                <div class="car-light" style="background-color: white;"></div>
            `;
            this.roadElement.appendChild(enemy);
            return enemy;
        }

        moveVertical(movement) {
            this.y += movement;
            this.element.style.top = `${this.y}px`;
        }

        moveHorizontal(direction, roadWidth) {
            const dx = direction * CONFIG.PLAYER_SPEED_HORIZONTAL;
            this.x += dx;

            const minX = 6;
            const maxX = roadWidth - this.width - 6;
            this.x = Math.max(minX, Math.min(maxX, this.x));

            this.element.style.left = `${this.x}px`;
        }

        getRect() {
            return { x: this.x, y: this.y, width: this.width, height: this.height };
        }

        remove() {
            if (!this.isPlayer && this.element) {
                this.element.remove();
            }
        }
    }


    // --- Game Controller Class ---
    class GameController {
        constructor() {
            // DOM Elements
            this.road = document.getElementById('road');
            this.scoreDisplay = document.getElementById('score');
            this.speedDisplay = document.getElementById('speed');
            this.gameOverScreen = document.getElementById('game-over-screen');
            this.finalScoreDisplay = document.getElementById('final-score');
            this.restartBtn = document.getElementById('restart-btn');

            // Game State
            this.playing = false;
            this.score = 0;
            this.currentSpeed = CONFIG.INITIAL_GAME_SPEED;
            this.keysPressed = {};
            this.enemies = [];
            this.roadLines = [];
            this.frameCounter = 0;
            this.player = null;

            this.restartBtn.addEventListener('click', () => this.init());

            // Initial setup
            this.setupTouchControls();
            window.addEventListener('keydown', (e) => this.handleKeyDown(e));
            window.addEventListener('keyup', (e) => this.handleKeyUp(e));
            window.addEventListener('resize', () => this.handleResize());
            this.init();
        }

        getRoadWidth() { return this.road ? this.road.clientWidth : 0; }
        getRoadHeight() { return this.road ? this.road.clientHeight : 0; }
        getDisplayScore() { return Math.floor(this.score); }

        init() {
            // Cleanup previous game elements
            this.enemies.forEach(e => e.remove());
            this.roadLines.forEach(l => l.remove());
            this.enemies = [];
            this.roadLines = [];

            // Reset state
            this.playing = true;
            this.score = 0;
            this.currentSpeed = CONFIG.INITIAL_GAME_SPEED;
            this.keysPressed = {};
            this.frameCounter = 0;

            // Initialize Player Car
            const roadWidth = this.getRoadWidth();
            const roadHeight = this.getRoadHeight();
            const playerX = roadWidth / 2 - CONFIG.CAR_WIDTH / 2;
            const playerY = roadHeight - CONFIG.CAR_HEIGHT - 20;
            this.player = new Vehicle(true, playerX, playerY, this.road);

            // Reset UI
            if (this.scoreDisplay) this.scoreDisplay.textContent = '0';
            if (this.speedDisplay) this.speedDisplay.textContent = this.currentSpeed.toFixed(1) + 'X';
            if (this.gameOverScreen) this.gameOverScreen.style.display = 'none';

            // Generate initial road lines
            const lineInterval = 120;
            const lineHeight = 80;
            for (let y = -lineHeight; y < roadHeight + lineHeight; y += lineInterval) {
                this.roadLines.push(new RoadLine(y, this.road));
            }

            // Start the loop
            requestAnimationFrame(this.gameLoop.bind(this));
        }

        gameOver() {
            this.playing = false;
            if (this.finalScoreDisplay) this.finalScoreDisplay.textContent = this.getDisplayScore();
            if (this.gameOverScreen) this.gameOverScreen.style.display = 'flex';

            // Visually indicate game over
            this.enemies.forEach(e => {
                if(e.element) e.element.style.opacity = '0.5';
            });
        }

        updatePlayer() {
            if (!this.player) return;

            const roadWidth = this.getRoadWidth();
            let horizontalDirection = 0;

            if (this.keysPressed['ArrowLeft'] || this.keysPressed['Left']) horizontalDirection = -1;
            if (this.keysPressed['ArrowRight'] || this.keysPressed['Right']) horizontalDirection = 1;

            if (horizontalDirection !== 0) {
                this.player.moveHorizontal(horizontalDirection, roadWidth);
            }

            if (this.keysPressed['ArrowUp'] || this.keysPressed['Up']) {
                this.currentSpeed = Math.min(CONFIG.MAX_GAME_SPEED, this.currentSpeed + CONFIG.ACCELERATION_RATE);
            } else if (this.keysPressed['ArrowDown'] || this.keysPressed['Down']) {
                this.currentSpeed = Math.max(CONFIG.INITIAL_GAME_SPEED, this.currentSpeed - CONFIG.ACCELERATION_RATE * 2);
            }

            if (this.speedDisplay) this.speedDisplay.textContent = this.currentSpeed.toFixed(1) + 'X';
        }

        updateRoadLines() {
            const movement = this.currentSpeed * CONFIG.ENEMY_SPEED_MULTIPLIER;
            const roadHeight = this.getRoadHeight();
            const lineInterval = 120;
            const lineHeight = 80;

            this.roadLines.forEach(line => line.update(movement));

            this.roadLines = this.roadLines.filter(line => {
                if (line.y > roadHeight) {
                    line.remove();
                    return false;
                }
                return true;
            });

            const lastLine = this.roadLines[this.roadLines.length - 1];
            if (!lastLine || lastLine.y > lineInterval - lineHeight) {
                this.roadLines.push(new RoadLine(-lineHeight, this.road));
            }
        }

        spawnEnemy() {
            const roadWidth = this.getRoadWidth();
            const minX = 6;
            const maxX = roadWidth - CONFIG.CAR_WIDTH - 6;
            const x = Math.floor(Math.random() * (maxX - minX + 1)) + minX;

            this.enemies.push(new Vehicle(false, x, -CONFIG.CAR_HEIGHT, this.road));
        }

        updateEnemies() {
            if (!this.player) return;

            const movement = this.currentSpeed * CONFIG.ENEMY_SPEED_MULTIPLIER;
            const roadHeight = this.getRoadHeight();
            const playerRect = this.player.getRect();

            for (let i = this.enemies.length - 1; i >= 0; i--) {
                const enemy = this.enemies[i];
                enemy.moveVertical(movement);

                if (checkCollision(playerRect, enemy.getRect())) {
                    this.gameOver();
                    return;
                }

                if (enemy.y > roadHeight) {
                    enemy.remove();
                    this.enemies.splice(i, 1);
                }
            }

            const spawnRate = Math.max(30, CONFIG.ENEMY_SPAWN_INTERVAL - this.currentSpeed * 15);
            if (this.frameCounter % spawnRate === 0) {
                this.spawnEnemy();
            }
        }

        updateScore() {
            this.score += this.currentSpeed * CONFIG.SCORE_INCREMENT_RATE;
            if (this.scoreDisplay) this.scoreDisplay.textContent = this.getDisplayScore();
        }

        gameLoop() {
            if (!this.playing) {
                return;
            }

            try {
                this.updatePlayer();
                this.updateRoadLines();
                this.updateEnemies();
                this.updateScore();
            } catch (e) {
                console.error("Game Loop Error:", e);
                this.gameOver();
                return;
            }


            this.frameCounter++;
            requestAnimationFrame(this.gameLoop.bind(this));
        }

        // --- Input Handling ---

        handleKeyDown(event) {
            if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight'].includes(event.key)) {
                event.preventDefault();
            }
            this.keysPressed[event.key] = true;
        }

        handleKeyUp(event) {
            this.keysPressed[event.key] = false;
        }

        setupTouchControls() {
            const buttonMap = {
                'left-btn': 'ArrowLeft',
                'right-btn': 'ArrowRight',
                'accel-btn': 'ArrowUp',
                'brake-btn': 'ArrowDown'
            };

            const buttons = document.querySelectorAll('.control-btn');

            buttons.forEach(button => {
                const key = buttonMap[button.id];

                const startPress = () => { if (this.playing) this.keysPressed[key] = true; };
                const stopPress = () => { this.keysPressed[key] = false; };

                button.addEventListener('mousedown', startPress);
                button.addEventListener('mouseup', stopPress);
                button.addEventListener('mouseleave', stopPress);

                button.addEventListener('touchstart', (e) => {
                    e.preventDefault();
                    startPress();
                }, { passive: false });
                button.addEventListener('touchend', stopPress);
                button.addEventListener('touchcancel', stopPress);
            });
        }

        handleResize() {
            if (this.playing && this.player) {
                const playerX = this.getRoadWidth() / 2 - CONFIG.CAR_WIDTH / 2;
                this.player.x = playerX;
                this.player.element.style.left = `${playerX}px`;
            }
        }
    }

    // --- Initialization ---
    window.onload = () => {
        new GameController();
    };
</script>

